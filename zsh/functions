function hist {
  history | awk '{a[$2]++}END{for(i in a){print a[i] " " i}}' | sort -rn | head
}

function sk {
  ps aux | grep sidekiq | awk '{print $2}' | xargs kill -9
  be sidekiq
}

function restore_dump {
  pg_restore --verbose --clean --no-acl --no-owner -h localhost -U pierre -d $1 $2
}

function precomp {
  `RAILS_ENV=production bundle exec rake assets:precompile`
}

function blog {
  open http://127.0.0.1:2368/Ghost
  cd ~/code/Ghost/
  npm start
}

function railsnewapp {
  rails new $1 -T -d postgresql --skip-bundle
}

function bd {
  cd ~/code/Ghost/
  buster generate --domain=http://127.0.0.1:2368
  buster deploy
}

function so {
  source ~/.zsh/aliases
  source ~/.zsh/functions
  echo aliases and functions updated
}

function mig {
  rake db:migrate
  rake db:test:prepare
}

function git-new-remote-tracking {
  git checkout -b $1 && git push -u origin $1
}

function git_branch_name {
  val=`git branch 2>/dev/null | grep '^*' | colrm 1 2`
  echo "$val"
}

function git-on-master {
  branch=`git_branch_name`
  git checkout master && git pull --rebase
  git checkout $branch
  git rebase master
}

function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}
compdef g=git

function rrg {
  rake routes | grep $1
}

function take {
  mkdir $1
  cd $1
}

# Allows commit message without typing quotes (can't have quotes in the commit msg though).
function gcam {
  git commit -am "$*"
}

function hpr {
  hub pull-request -m $1 -b $2
}

function hrc {
  heroku run console -a $1
}

function git-delete-merged {
  git branch --merged | grep -v "\*\|master\|release\|develop" | xargs -n 1 git branch -d
}
